                    <% if @rental.geocoded? %>
                        <b> Distance from CSUC: <%= @rental.distance_from([39.727900, -121.844173]) %></b>
                    <% end %>
                </td>
                <% if( @rental.amen_spa ) %>
                    <td> <b>Spa</b> </td>
                <% else %>
                    <td><strike> Spa</strike> </td>
                <% end %> 
                <% if( @rental.util_tv ) %>
                    <td> <b>Cable</b> </td>
                <% else %>
                    <td><strike> Cable</strike> </td>
                <% end %>
            </tr>
            <tr>
